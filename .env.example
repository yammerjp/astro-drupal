# Port configuration
NGINX_PORT=8123
ASTRO_PORT=4321
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Domain suffix for all services (when using Nginx proxy)
# Example: if DOMAIN_SUFFIX=example.com
# - astro.example.com -> Astro frontend
# - drupal.example.com -> Drupal CMS
# - minio.example.com -> MinIO console
# - blob.example.com -> S3 file serving
DOMAIN_SUFFIX=

# Database configuration
DRUPAL_DATABASE_USER=drupal
DRUPAL_DATABASE_PASSWORD=drupal
DRUPAL_DATABASE_NAME=drupal
MARIADB_ROOT_PASSWORD=root

# S3/MinIO configuration
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=drupal-files
S3_REGION=us-east-1
S3_USE_HTTPS=false
S3_HOSTNAME=minio:9000
S3_USE_PATH_STYLE=true

# PHP configuration
PHP_MEMORY_LIMIT=256M